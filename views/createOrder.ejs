<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Creating the companies</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

    <%- include('partials/navigation.ejs') %>


    <main class="container">

      <h1>Creating an order</h1>

      <form action = "/orders/create" method="POST">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputPolicyOrder">Policy Order</label>
            <input type="text" class="form-control" name="policyOrder" id="inputPolicyOrder" placeholder="Policy Order">
          </div>
          <div class="form-group col-md-6">
            <label for="inputCompany" class="form-label">Company</label>
            <select type="text" name="company" class="form-control" id="inputAddress">
                <% for(var i = 0; i < companies.length; i++) { %>
                    <% if(companies[i].hidden===false){ %>
                    <option value="<%= companies[i].id %>"><%= companies[i].name %></option>
                    <% }} %>
               
                </select>
          </div>
        </div>
     
          <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputYear">Year</label>
                <input type="number" name="year" class="form-control" id="inputYear" placeholder="Year">
            </div>
            <div class="form-group col-md-4">
              <label for="inputMake">Make</label>
              <input type="text" name="make" class="form-control" id="inputMake" placeholder="Make">
            </div>
            <div class="form-group col-md-4">
              <label for="inputModel">Model</label>
              <input type="text" name="model" class="form-control" placeholder="Model" id="inputModel">
            </div>
          </div>
          
          <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputPlate">Licence Plate</label>
                <input type="text" name="plate" placeholder="Licence Plate" class="form-control" id="inputPlate" >
            </div>
            <div class="form-group col-md-6">
                <label for="inputVin">VIN</label>
                <input type="text" name="vin" placeholder="VIN Number" class="form-control" id="inputVin" >
            </div>

          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputPickUp">Pick Up Day</label>
                <input type="date" name="pickUpDay" class="form-control" id="inputPickUp" >
            </div>   
            <div class="form-group col-md-6">
                <div class="form-check">
                <input class="form-check-input" name="nightShift" type="checkbox" id="inputNightShift">
                <label class="form-check-label" for="inputNightShift">
                 Night Shift
                </label>
            </div>
            </div>
  
          </div>
    
        <div class="form-group">
          <label for="inputAdditionalFees">Additional Fees</label>
          <input type="number" min="0" class="form-control" name="additionaFees" value="0" id="inputAdditionalFees" placeholder="Additional Fees">
        </div>
    
        <div class="form-group">
            <label for="inputAdditionalFeesReason">Additional Fees</label>
            <textarea  class="form-control" name="additionalFeesReason" value="0" id="inputAdditionalFeesReason" placeholder="Reason for additional fees."></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
      </form>
    </main>

    
</body>
</html>